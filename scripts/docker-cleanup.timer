[Unit]
Description=Weekly Docker Cache Cleanup Timer for SULLIVAN
Documentation=https://github.com/nuniesmith/personal_servers_sullivan
Requires=docker-cleanup.service

[Timer]
# Run every Sunday at 3:00 AM (1 hour after FREDDY)
OnCalendar=Sun *-*-* 03:00:00
# If the system was off during the scheduled time, run on next boot
Persistent=true
# Randomize start time by up to 1 hour to avoid conflicts
RandomizedDelaySec=3600

[Install]
WantedBy=timers.target
